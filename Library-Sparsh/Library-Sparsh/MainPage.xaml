<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Library_Sparsh.MainPage"
             xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
             ios:Page.UseSafeArea="true">
    

    <StackLayout Orientation="Vertical" Spacing="10" Padding="30">
        <Label Text="Login" FontSize="40" HorizontalTextAlignment="Center" Padding="50"/>
        <Entry x:Name="xUsername" Placeholder="Enter username" FontSize="20"/>
        <Entry x:Name="xPassword" Placeholder="Enter password" FontSize="20"/>
        <Frame BorderColor="CornflowerBlue" BackgroundColor="White" Padding="1" HasShadow="False">
            <Button Text="LOGIN" TextColor="CornflowerBlue" BackgroundColor="White" Clicked="Button_Clicked"/>
        </Frame>
        <Label x:Name="xError" Padding="9" BackgroundColor="PaleVioletRed" IsVisible="false" FontSize="16" TextColor="DarkRed"/>
    </StackLayout>

</ContentPage>
